<h1>Log in</h1>
<div>
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.email_field :password %>

    <%= f.submit 'Log in' %>
  <% end %>

  <p>New user? <%= link_to 'Sign up now!', signup_path %></p>
</div>
